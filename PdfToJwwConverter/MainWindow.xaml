<Window x:Class="PdfToJwwConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfToJwwConverter"
        mc:Ignorable="d"
        Title="PDF to JWW Converter" 
        SizeToContent="WidthAndHeight"
        AllowDrop="True"
        Drop="Window_Drop"
        PreviewDragOver="Window_PreviewDragOver"
        
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="PDF" Grid.Row="0" Grid.Column="0" Margin="4" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" >
            <TextBox x:Name="Part_PdfFile" Margin="4" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalContentAlignment="Center" Width="400"
                     IsReadOnly="true"
                     />
            <Button x:Name="Part_OpenPDF" Content="..." Width="32" Margin="4"
                    Click="Part_OpenPDF_Click"
                    />   
        </StackPanel>
        <Label
            Margin="4"
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Page" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="4"
            Orientation="Horizontal"
            >
        <TextBox
            x:Name="Part_PageNumber"
            Margin="4"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            MinWidth="100"
            Text="1"
            />
            <TextBlock
            Margin="4"
                x:Name="Part_PageRange"
                />
        </StackPanel>
        <Label
            Margin="4"
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Option" />

        <CheckBox 
            x:Name="Part_CombineText"
            Content="Combine text"
                  Margin="4"
                  Grid.Row="2"
                  Grid.Column="1"
            VerticalAlignment="Center"
            IsChecked="{Binding EnableCombineText}"
                  />
        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="Part_Convert"
                Width="70"
                Margin="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="CONVERT"
                IsDefault="True" />
        </StackPanel>


    </Grid>
</Window>
